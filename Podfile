platform :ios, '15.0'

source 'https://github.com/CocoaPods/Specs.git'

target 'Poster' do
  use_frameworks!

  # Pods for Poster
  pod 'SnapKit', '~> 5.0.0'
  pod 'FirebaseAuth'
  pod 'FirebaseFirestore'
  pod 'FirebaseFirestoreSwift'

end

target 'PosterUIKit' do
  use_frameworks!

  # Pods for PosterUIKit
  pod 'SnapKit', '~> 5.0.0'
  pod 'FirebaseAuth'
  pod 'FirebaseFirestore'
  pod 'FirebaseFirestoreSwift'

end

target 'PosterKit' do
  use_frameworks!

  # Pods for PosterKit
  pod 'FirebaseAuth'
  pod 'FirebaseFirestore'
  pod 'FirebaseFirestoreSwift'

end